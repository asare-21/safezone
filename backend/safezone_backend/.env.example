# SafeZone Backend Environment Configuration
# Copy this file to .env and fill in the values
# IMPORTANT: Never commit .env to version control!

# Django Settings
DJANGO_SECRET_KEY=your-secret-key-here-min-50-characters-random-string
DJANGO_DEBUG=False
DJANGO_ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com

# Auth0 Configuration
# Get these from your Auth0 dashboard: https://manage.auth0.com/
AUTH0_DOMAIN=your-tenant.auth0.com
AUTH0_AUDIENCE=https://your-api-identifier

# Field Encryption Key (separate from SECRET_KEY for enhanced security)
# IMPORTANT: This must be a valid Fernet key (32 url-safe base64-encoded bytes)
# Generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
# Example: AWAmdE1i8qmPhmhKuV0P4MBaWOQcrDOwuxrP-khIUwk=
# WARNING: Changing this key will make existing encrypted data unreadable!
# For development: Leave commented out to auto-generate from SECRET_KEY (not recommended for production)
# For production: Generate and set a unique key using the command above
#FIELD_ENCRYPTION_KEY=

# Database Configuration (for PostgreSQL in production)
DATABASE_URL=postgres://user:password@localhost:5432/safezone_db

# Data Retention Policies (in days)
INCIDENT_RETENTION_DAYS=90
USER_PREFERENCES_INACTIVE_DAYS=365
DEVICE_TOKEN_INACTIVE_DAYS=180

# Firebase Configuration (if using Firebase Admin SDK)
FIREBASE_CREDENTIALS_PATH=/path/to/firebase-credentials.json

# Email Configuration (for notifications)
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=noreply@yourdomain.com
EMAIL_HOST_PASSWORD=your-email-password

# Redis Configuration (for caching and Celery)
REDIS_URL=redis://localhost:6379/0

# Sentry Configuration (error tracking)
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Security Settings
SECURE_SSL_REDIRECT=True
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True
SECURE_HSTS_SECONDS=31536000

# CORS Settings (Production)
CORS_ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Development Settings
# Uncomment for local development
# DJANGO_DEBUG=True
# DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1,10.0.2.2
# SECURE_SSL_REDIRECT=False
